<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="deber2AlexisSigcha.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="TAREA SEMANA 2" HorizontalTextAlignment="Center" TextColor="White" FontSize="16"/>
        </Frame>
        

        <Entry x:Name="txtUser" Placeholder="Usuario"></Entry>
        <Entry x:Name="txtPass" Placeholder="Contraseña" IsPassword="True"></Entry>
        <Button x:Name="btnLogin" Text="Login" Clicked="btnLogin_Clicked"></Button>
    </StackLayout>

</ContentPage>
